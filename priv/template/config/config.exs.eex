use Mix.Config

<%= if @ecto do %>
config :<%= @name %>,
  ecto_repos: [<%= @module %>.Repo]

config :<%= @name %>, <%= @module %>.Repo,
  url: "ecto://<%= @ecto.db_username %>:<%= @ecto.db_password %>@localhost:6543/<%= @ecto.db_name %>?ssl=false&pool_size=10"

if Mix.env() == :test do
config :<%= @name %>, <%= @module %>.Repo,
  pool: Ecto.Adapters.SQL.Sandbox
end
<% end %>
<%= if @exsync do %>
if Mix.env() == :dev do
  config :exsync,
    extra_extensions: [".js", ".css"]
end
<% end %>

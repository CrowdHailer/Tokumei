<%= if @docker do %>version: '2'

services:
  <%= @name %>:
    build:
      context: "."
      dockerfile: "Dockerfile"
    ports:
      - 8080:8080
      - 8443:8443
    volumes:
      - .:/opt/app
      ## uncomment the below lines if you want to see the contents of the
      ## container's deps and _build directories in your local checkout,
      ## under deps_docker/ and _build_docker/
      # - ./deps_docker:/opt/deps
      # - ./_build_docker:/opt/_build
<% end %>
